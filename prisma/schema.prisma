model Expense {
  id      String         @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime       @unique
  entries ExpenseEntry[]
}

type ExpenseEntry {
  amount Int
  reason String
}

// ==========================================
// Scheduling (one document per day)
// ==========================================

type ScheduleSlot {
  startMinutes Int
  endMinutes   Int
  note         String?
}

type DayEntry {
  userId String  @db.ObjectId
  slots  ScheduleSlot[]
  notes  String?
}

model ScheduleDay {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime   @unique // unique implies index; efficient for date and date-range queries
  entries   DayEntry[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

// ==========================================
// Role-Based Access Control (RBAC) Models
// ==========================================

model Permission {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  code        String  @unique
  name        String
  description String?
  resource    String
  action      String

  roleIds String[] @db.ObjectId
  roles   Role[]   @relation(fields: [roleIds], references: [id])
}

model Role {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  editable    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  permissionIds String[]     @db.ObjectId
  permissions   Permission[] @relation(fields: [permissionIds], references: [id])

  users User[]

  // Note: name uniqueness will be enforced at application level
  // When multi-tenant is added, this will become @@unique([name, tenantId])
}
